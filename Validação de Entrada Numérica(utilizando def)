def leiaInt(msg):  
    """Garante que o usuário insira um número inteiro válido."""  
    while True:  
        try:  
            n = int(input(msg))  
            return n  
        except ValueError:  
            print('\033[1;31mERRO! Digite um número inteiro válido.\033[m')  

# Programa Principal
n = leiaInt('Digite um número inteiro: ')  
print(f'Você acabou de digitar o número {n}.')  
