print('-' * 20)
print('\033[1;32mTABUADA\033[m')  # Mensagem colorida em verde usando ANSI
print('-' * 20)

n = int(input('Digite um número: '))  # Solicita ao usuário um número para calcular a tabuada

for c in range(0, 11):  # Loop de 0 a 10
    mult = n * c  # Multiplica o número informado pelo usuário
    print('{} x {} = \033[1;32m{}\033[m'.format(n, c, mult))  # Exibe a tabuada formatada
